<div class="signup-form-container clearfix">
  <div class="signup-form">
    <%= form_for @account, url: "/create_account" do |f| %>
        <dl class="form">
          <dt><%= f.label :name, "用户名(不多于10个字)" %></dt>
          <dd><%= f.text_field :name %></dd>
        </dl>
        <dl class="form">
          <dt><%= f.label :email %></dt>
          <dd><%= f.text_field :email %></dd>
        </dl>
         <dl class="form">
            <dt><%= f.label :num, "学号" %></dt>
            <dd><%= f.text_field :num %></dd>
        </dl>
        <dl class="form">
          <dt><%= f.label :password, "密码" %></dt>
          <dd><%= f.password_field :password %></dd>
        </dl>
        <dl class="form">
          <dt><%= f.label :password_confirmation, "请再输入一次" %></dt>
          <dd><%= f.password_field :password_confirmation %></dd>
        </dl>
          <dl class="form" >
          <dt><%= f.label :school, "学院" %></dt>
          <dd>
            <select name="account[school]" class="form-control"  style="height:60px;">
              <% Account::SCHOOL.each do |sc| %>
                <option value= "<%= sc[0] %>"><%= sc[1] %></option>
              <% end %>
            </select>
          </dd>
        </dl>

        <p><%= f.submit "注册", :class => " login-button btn btn-primary" %></p>
    <% end %>
  </div>
</div>
