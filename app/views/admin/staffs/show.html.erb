<section class="wrapper">
  <!-- page start-->
  <div class="row">
    <div class="col-lg-12">
      <section class="panel">
        <header class="panel-heading">
          查 看&nbsp&nbsp <a href="/admin/staffs/<%= @staff.id %>/edit"><button class="btn btn-info" type="button">修改</button></a>
        </header>
        <div class="panel-body">
          <form class="form-horizontal adminex-form" >
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label"><i class="bi_tian">*&nbsp</i>学号</label>
              <div class="col-sm-10">
                <input type="number" name="student_no" value="<%= @staff.student_no %>" class="form-control" placeholder="请输入学号">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label"><i class="bi_tian">*&nbsp</i>姓名</label>
              <div class="col-sm-10">
                <input type="text" name="name" value="<%= @staff.name %>" class="form-control" placeholder="请输入姓名">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label"><i class="bi_tian">*&nbsp</i>部门</label>
              <div class="col-sm-10">
                <input type="text"  value="<%= (department = get_data_by_pid('id', @staff.department_id, Department)).blank? ? '' : department.first.name %>" class="form-control" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label"><i class="bi_tian">*&nbsp</i>职位</label>
              <div class="col-sm-10">
                <input type="text"  value="<%= (job = get_data_by_pid('id', @staff.job_id, Job)).blank? ? '' : job.first.name %>" class="form-control" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label"><i class="bi_tian">*&nbsp</i>任职开始</label>
              <div class="col-sm-10">
                <input type="text" value="<%= @staff.start_time.to_s[0..10] %>" class="form-control" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label"><i class="bi_tian">*&nbsp</i>任职结束</label>
              <div class="col-sm-10">
                <input type="text" value="<%= @staff.end_time.to_s[0..10] %>" class="form-control" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">状态</label>
              <div class="col-sm-10">
                <input type="text" value="<%= get_dict(:status)[@staff.status.to_s] %>" class="form-control" placeholder="请输入姓名">
              </div>
            </div>
          </form>
        </div>
      </section>
    </div>
  </div>
  <!-- page end-->
</section>