<% content_for :css do %>
  <link rel="stylesheet" type="text/css" href="/css/webuploader.css">
  <style>
    #uploader{
      position: relative;
      top: 20px;
      left: 20px;
    }
  </style>
<% end %>
<section class="wrapper">
  <!-- page start-->
  <div class="row">
    <div class="col-lg-12">
      <section class="panel">
        <header class="panel-heading">
          新 增
        </header>
        <div class="panel-body">
          <form class="form-horizontal adminex-form">
            <div class="form-group">
              <div id="uploader" class="wu-example col-sm-10">
                <!--用来存放文件信息-->
                <div id="thelist" class="uploader-list"></div>
                <div class="btns" style="padding-bottom: 20px">
                  <div id="picker" style="float: left;margin-right: 10px;">选择文件</div>
                  <button id="ctlBtn" class="btn btn-success" type="button" style="padding: 10px;">开始上传</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </section>
    </div>
  </div>
</section>
<% content_for :js do %>
  <script type="text/javascript" src="/js/webuploader.js"></script>
  <script type="text/javascript" src="/js/upload_attachments.js"></script>
<% end %>